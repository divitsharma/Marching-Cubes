float3 VertexInterpolate(float3 a, float3 b, float3 pos)
{
	a += pos;
	b += pos;
	//return float3(1, 0, 0);
	/*float fieldA = scalarField[ToArrayIndex(a)];
	float fieldB = scalarField[ToArrayIndex(b)];
