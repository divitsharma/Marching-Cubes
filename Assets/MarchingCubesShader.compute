	float fieldDiff = fieldB - fieldA;

	float surfaceDiff = surfaceLevel - fieldA;
	return a.xyz +surfaceDiff *vectorDiff / fieldDiff;*/
	//return (a + b) * 0.5;
	return a + (surfaceLevel - scalarField[ToArrayIndex(a)]) * (b - a) / (scalarField[ToArrayIndex(b)] - scalarField[ToArrayIndex(a)]);
}

